<main class="pt-1 pb-16 lg:pt-1 lg:pb-24 bg-white dark:bg-gray-900 antialiased">
  <div class="flex justify-between px-4 mx-auto max-w-screen-xl ">
      <article class="mx-auto w-full max-w-2xl format format-sm sm:format-base lg:format-lg format-blue dark:format-invert">
            <div class="flex items-end justify-end">
                <!-- 
                <%= link_to 'Edit',
                    edit_article_path(@article),
                    class: 'py-2.5 px-4 text-base font-medium text-center text-primary-700 hover:text-primary-500'
                %>
                -->
                <%= link_to 'Back',
                    articles_path,
                    class: 'py-2.5 px-4 text-base font-medium text-center text-gray-700 hover:text-black'
                %>
            </div>
          <header class="mb-4 lg:mb-6 not-format">
            <h1 class="mb-2 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white">
                <%= @article.title %>
            </h1>
            <address class="flex items-center mb-6 not-italic">
                <div class="inline-flex items-center mr-3 text-sm text-gray-900 dark:text-white">
                    <div>
                        <a href="#" rel="author" class="text-xl font-bold text-gray-900 dark:text-white">Author: <%= @article.author %></a>
                        <p class="text-base text-gray-500 dark:text-gray-400"><time pubdate datetime="2022-02-08" title="February 8th, 2022"><%= I18n.l(@article.created_at.to_date, format: "%B %e, %Y") %></time></p>
                    </div>
                </div>
            </address>
          </header>
          <p><%= @article.text %></p>
          <section class="not-format mt-5">
              <div class="flex justify-between items-center mb-6">
                  <h2 class="text-lg lg:text-2xl font-bold text-gray-900 dark:text-white">Discussion (<%= @article.comments.size %>)</h2>
              </div>
              <%= render 'comments/form' %>
              <%= render @article.comments %>
          </section>
      </article>
  </div>
</main>

<footer class="bg-gray-50 dark:bg-gray-800 antialiased">
  <div class="p-4 py-6 mx-auto max-w-screen-xl md:p-8 lg:p-10">
      <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8">
      <div class="text-center">
          <span class="block text-sm text-center text-gray-500 dark:text-gray-400">Â© 2024
          </span>
      </div>
  </div>
</footer>